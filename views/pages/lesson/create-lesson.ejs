<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <%- include ("../../partials/sidebar") %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <%- include ("../../partials/top-navbar") %>

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <!-- Page Heading -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Create Lesson</h6>
            </div>
            <div class="card-body">
              <form class="user" id="lessonForm">
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="categoryTitle">Lesson Title</label>
                      <input
                        type="text"
                        name="title"
                        class="form-control form-control-user"
                        id="categoryTitle"
                        aria-describedby="categoryTitle"
                        placeholder="Enter title"
                      />
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="shortDescription">Short Description</label>
                      <input
                        type="text"
                        name="shortDescription"
                        class="form-control form-control-user"
                        id="shortDescription"
                        placeholder="Short Decription"
                      />
                    </div>
                  </div>
                </div>
                <div class="row mb-2">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="category">Which subject are you adding for? </label>
                        
                        <select name="category" class="form-control">
                        <option>choose below</option>
                        <% subjectsList.forEach(subject => { %>
                        <option value="<%-subject.id %>">
                          <%- subject.title %>
                        </option>
                        <%})%>
                      </select>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <label for="lessonPic" style="display: block"
                      >Category pic</label
                    >
                    <input
                      type="file"
                      name="lessonPic"
                      id="lessonPic"
                      placeholder=""
                    />
                  </div>
                </div>
                <button
                  type="button"
                  class="btn btn-primary btn-user btn-block"
                  onclick="createLesson()"
                >
                  Create Lesson
                </button>
                <hr />
              </form>
            </div>
          </div>
        </div>
        <!-- /.container-fluid -->
      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <footer class="sticky-footer bg-white">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright &copy; Your Website 2020</span>
          </div>
        </div>
      </footer>
      <!-- End of Footer -->
    </div>
    <!-- End of Content Wrapper -->
  </div>
  <!-- End of Page Wrapper -->

  <script>
    const createLesson = () => {
      const formElement = document.querySelector("#lessonForm");
      const formData = new FormData(formElement);
      postLessonData(formData).then(async (response) => {
        if (response.status === 200) {
          window.location.href = "/lessons";
        }
      });
    };

    const postLessonData = async (lessonData) => {
      const { accessToken } = JSON.parse(localStorage.getItem("tokens"));

      const response = await fetch("/api/v1/category/create-lesson", {
        method: "POST",
        headers: {
          Authorization: `Bearer ${accessToken}`,
        },
        body: lessonData,
      });
      return response;
    };
  </script>
</body>
