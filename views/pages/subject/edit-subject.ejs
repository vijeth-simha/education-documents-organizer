<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <%- include ("../../partials/sidebar") %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <%- include ("../../partials/top-navbar") %>

        <!-- Begin Page Content -->
        <div class="container-fluid">
          <!-- Page Heading -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Edit Subject</h6>
            </div>
            <div class="card-body">
              <form class="user" id="subjectForm">
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="subjectTitle">Subject Title</label>
                      <input
                        type="text"
                        name="title"
                        class="form-control form-control-user"
                        id="subjectTitle"
                        aria-describedby="subjectTitle"
                        placeholder="Enter title"
                        value="<%- subject.title %>"
                      />
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="shortDescription">Short Description</label>
                      <input
                        type="text"
                        name="shortDescription"
                        class="form-control form-control-user"
                        placeholder="Short Decription"
                        value="<%- subject.shortDescription %>"
                      />
                    </div>
                  </div>
                </div>
                <div class="row mb-2">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="semester">To which semester does it belong to? </label>
                        <select name="semesterId" class="form-control">
                        <option>choose below</option>
                        <% semestersList.forEach(semester => { %>
                        <option value="<%-semester.id %>" <%= semester.id ===subject.id ? 'selected': "" %> >
                          <%- semester.title %>
                        </option>
                        <%})%>
                      </select>
                    </div>
                  </div>
                  
                </div>
                <div class="row mb-4">
                  <div class="col-md-12">
                    <div class="image-display-section">
                      <i
                        class="fas fa-window-close close-icon"
                        onclick="showFileSection()"
                      ></i>
                      <img
                        class="category-image"
                        alt="Image placeholder"
                        src="/img/subject-images/<%- subject.subjectPic %>"
                      />
                    </div>
                    <div class="file-section-container">
                      <div style="width: 100%">
                        <label for="subjectPic" style="display: block"
                        >Semester pic</label>
                        <input
                          type="file"
                          name="subjectPic"
                          id="subjectPic"
                          placeholder=""
                        />
                        <i
                          class="fas fa-window-close close-icon"
                          onclick="showImageSection()"
                        ></i>
                      </div>
                    </div>
                    
                  </div>
                </div>
                <button
                  type="button"
                  class="btn btn-primary btn-user btn-block"
                  onclick="editSubject('<%- subject.id %>')"
                >
                  Update Subject
                </button>
                <hr />
              </form>
            </div>
          </div>
        </div>
        <!-- /.container-fluid -->
      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <footer class="sticky-footer bg-white">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright &copy; Your Website 2020</span>
          </div>
        </div>
      </footer>
      <!-- End of Footer -->
    </div>
    <!-- End of Content Wrapper -->
  </div>
  <!-- End of Page Wrapper -->

  <script>
    const editSubject = (subjectId) => {
      const formElement = document.querySelector("#subjectForm");
      const formData = new FormData(formElement);
      postSubjectData(formData,subjectId).then(async (response) => {
        if (response.status === 200) {
          window.location.href = "/subjects";
        }
      });
    };

    const postSubjectData = async (categoryData,subjectId) => {
      const { accessToken } = JSON.parse(localStorage.getItem("tokens"));

      const response = await fetch(`/api/v1/subject/edit-subject/${subjectId}`, {
        method: "PUT",
        headers: {
          Authorization: `Bearer ${accessToken}`,
        },
        body: categoryData,
      });
      return response;
    };
  </script>
</body>
